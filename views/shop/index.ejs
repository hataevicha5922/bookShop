<%- include("../includes/head.ejs") %>
 </head>
  <body>
    <%- include("../includes/navigate.ejs") %>
    <main>
      <% if (prods.length > 0) { %>
      <div class="grid">
        <% for(let prod of prods) {%>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= prod.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="<%= prod.imageUrl %>""
              alt="<%= prod.title %>"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= prod.price %></h2>
            <p class="product__description"> <%= prod.description %>
            </p>
          </div>
          <div class="card__actions">
            <%- include('../includes/add-to-cart.ejs', {productDetails: prod}) %>
          </div>
        </article>
        <% } %>
      </div>
      <% } else { %>
      <h1>Products Not Found!</h1>
      <% } %>
    </main>
    <%- include("../includes/end.ejs") %>